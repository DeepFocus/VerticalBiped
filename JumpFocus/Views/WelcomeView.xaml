<UserControl x:Class="JumpFocus.Views.WelcomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="Azure"  Height="900" Width="1200">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/JumpFocus;component/Resources/Images/intro.png"/>
        </Grid.Background>
        <Label Content="{Binding TwitterHandle}" Margin="388,76,304,746" FontSize="48" FontFamily="Lucida Console" />
        <Image Source="{Binding TwitterPhoto}" HorizontalAlignment="Left" Height="156" Margin="230,76,0,0" VerticalAlignment="Top" Width="156"/>
        <Label Content="{Binding PlayerName}" Margin="386,154,306,668" FontSize="36" FontFamily="Lucida Console" />
        <Label Content="{Binding Guide}" Margin="388,0,304,822" FontSize="36" FontFamily="Lucida Console" />
    </Grid>
</UserControl>
